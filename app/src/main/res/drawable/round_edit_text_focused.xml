<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/yellow" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_yellow" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>

</selector>
